<div class="sidebar">
  <div class="box auth">
    <% if(!user.id && !user.login){ %>
    <form method="post" class="login">
      <h2>Вход</h2>
      <div class="form-group">
        <label for="login-login">Логин</label>
        <input type="text" name="login" id="login-login" />
      </div>
      <div class="form-group">
        <label for="login-password">Пароль</label>
        <input type="password" name="password" id="login-password" />
      </div>
      <div class="buttons">
        <button class="switch-button secondary secondary-inverse">
          Регистрация
        </button>
        <button class="login-button">Войти</button>
      </div>
    </form>

    <form method="post" class="register">
      <h2>Регистрация</h2>
      <div class="form-group">
        <label for="register-login">Логин</label>
        <input type="text" name="login" id="register-login" />
      </div>
      <div class="form-group">
        <label for="register-password">Пароль</label>
        <input type="password" name="password" id="register-password" />
      </div>
      <div class="form-group">
        <label for="register-password-confirm">Повторите пароль</label>
        <input
          type="password"
          name="passwordConfirm"
          id="register-password-confirm"
        />
      </div>
      <div class="buttons">
        <button class="switch-button secondary secondary-inverse">Вход</button>
        <button class="register-button">Регистрация</button>
      </div>
    </form>

    <% } else { %>
    <p>
      Привет,<%= user.login %>!
      <a href="/api/auth/logout">Выход</a>
    </p>
    <% } %>
  </div>
  <div class="box">box</div>
</div>
